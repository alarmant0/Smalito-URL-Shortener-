{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2024",
    "lib": ["ES2024"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* JS Support */
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Do not emit (Workers handles bundling) */
    "noEmit": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],

      "@/routes/*": ["src/routes/*"],
      "@/services/*": ["src/services/*"],
      "@/utils/*": ["src/utils/*"],
      "~/*": ["public/*"],
      "~/assets/*": ["public/assets/*"],
      "~/views/*": ["public/views/*"]
    },

    /* Types */
    "types": [
      "./worker-configuration.d.ts",
      "node"
    ]
  },

  "include": [
    "src",
    "worker-configuration.d.ts"
  ]
}
